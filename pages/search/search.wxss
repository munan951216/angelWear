.jbn_search{
  width:100%;
  display: flex;
  justify-content: space-between;
  padding:0rpx 30rpx;
  box-sizing: border-box;
}
.van-search{
  width:625rpx;
}
.jbn_searchNav{
  width:100%;
  height:86rpx;
  border-top:3rpx solid #e4e4e4;
  display: flex;
  justify-content:space-around;
}
.jbn_searchNav text{
  margin-top:-20rpx;
}
.jbn_searchList{
  width:100%;
  height:1010rpx;
  background:#f5f5f5;
  padding:15rpx;
  box-sizing: border-box;
}
.active{
  color:red;
}
.jbn_goodsList{
  width:720rpx;
  /* height:220rpx; */
  background:#fff;
  border-radius:25rpx;
  display: flex;
}
.jbn_left{
  width:220rpx;
  height: 220rpx;
  /* background: red; */
}
.jbn_left image{
  width:220rpx;
  height:220rpx;
  }
  .jbn_right{
    width: 500rpx;
    padding:20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .jbn_right>view:nth-child(2){
    color:red;
    font-size:28rpx;
    font-weight: bold;
  }
  .jbn_right>view:nth-child(3){
    color:#a5a5a5;
    font-size:24rpx;
    display: flex;
    width: 100%;
    justify-content: space-between;
  }
  /* 商品列表样式2 */
  .jbn_shopList{
    width:100%;
    height:1010rpx;
    background:#f5f5f5;
  }
  .jbn_list{
    width:100%;
    display: flex;
    flex-wrap: wrap;
    padding:10rpx;
    box-sizing: border-box;
    justify-content: space-between;
  }
  .jbn_goods{
    width:350rpx;
    background:#fff;
    /* height:600rpx; */
    border-radius:25rpx;
    margin-top:20rpx;
  }
  .jbn_img>image{
    width: 350rpx;
    height:350rpx;
  }
  .jbn_info{
    width:350rpx;
    /* height:250rpx; */
    padding:20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .jbn_addCart{
    width:100%;
    display: flex;
    justify-content: space-between;
    color:#b0b0b0;
    font-size: 24rpx;
  }
  .jbn_info>view:nth-child(1){
    font-size: 30rpx;
  }
  .jbn_info>view:nth-child(2){
    font-size: 26rpx;
    color:red;
    font-weight: bold;
  }